<?xml version="1.0" encoding="UTF-8"?>
<project>

  <properties>
    <docker.auth.username>changeme</docker.auth.username>
    <docker.auth.password>changeme</docker.auth.password>
    <docker.registry>docker.io/kdeng</docker.registry>
    <docker.imageName>${project.artifactId}</docker.imageName>
    <docker.imageFullName>${docker.registry}/${docker.imageName}</docker.imageFullName>
    <docker.imageTag>${project.version}</docker.imageTag>
    <docker.dockerFile>${project.basedir}/Dockerfile</docker.dockerFile>
    <docker.contextDir>${project.basedir}</docker.contextDir>

    <project.tile.docker.fullName>${docker.imageFullName}</project.tile.docker.fullName>
    <project.tile.docker.currentTag>${docker.imageTag}</project.tile.docker.currentTag>
    <project.tile.docker.latestTag>latest</project.tile.docker.latestTag>
    <project.tile.docker.dockerFile>${docker.dockerFile}</project.tile.docker.dockerFile>
    <project.tile.docker.contextDir>${docker.contextDir}</project.tile.docker.contextDir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <version>0.33.0</version>
        <executions>
          <execution>
            <id>build-docker-image</id>
            <goals>
              <goal>build</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
        <configuration>
          <images>
            <image>
              <name>${project.tile.docker.fullName}:${project.tile.docker.currentTag}</name>
              <build>
                <contextDir>${project.tile.docker.contextDir}</contextDir>
                <dockerFile>${project.tile.docker.dockerFile}</dockerFile>
                <filter>@</filter>
                <tags>
                  <tag>${project.tile.docker.latestTag}</tag>
                </tags>
              </build>
            </image>
          </images>
          <verbose>all</verbose>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>docker-push</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>push-docker-image</id>
                <phase>install</phase>
                <goals>
                  <goal>push</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>docker-auth-push</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>push-docker-image</id>
                <phase>install</phase>
                <goals>
                  <goal>push</goal>
                </goals>
                <configuration>
                  <authConfig>
                    <username>${docker.auth.username}</username>
                    <password>${docker.auth.password}</password>
                  </authConfig>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <project.tiles.exec-maven-plugin.version>1.6.0</project.tiles.exec-maven-plugin.version>

    <project.tile.sonar.projectKey>${project.artifactId}</project.tile.sonar.projectKey>
    <project.tile.sonar.projectName>${project.description}</project.tile.sonar.projectName>
    <project.tile.sonar.organization>kdeng</project.tile.sonar.organization>
    <project.tile.sonar.host>https://sonarcloud.io</project.tile.sonar.host>
    <project.tile.sonar.debug>false</project.tile.sonar.debug>
    <project.tile.sonar.token></project.tile.sonar.token>
    <project.tile.sonar.branchName>master</project.tile.sonar.branchName>

    <maven-tile.node.sonar.projectKey>${project.tile.sonar.projectKey}</maven-tile.node.sonar.projectKey>
    <maven-tile.node.sonar.projectName>${project.tile.sonar.projectName}</maven-tile.node.sonar.projectName>
    <maven-tile.node.sonar.organization>${project.tile.sonar.organization}</maven-tile.node.sonar.organization>
    <maven-tile.node.sonar.host>${project.tile.sonar.host}</maven-tile.node.sonar.host>
    <maven-tile.node.sonar.debug>${project.tile.sonar.debug}</maven-tile.node.sonar.debug>
    <maven-tile.node.sonar.token>${project.tile.sonar.token}</maven-tile.node.sonar.token>
    <maven-tile.node.sonar.password></maven-tile.node.sonar.password>
    <maven-tile.node.sonar.maxRetry>10</maven-tile.node.sonar.maxRetry>
    <maven-tile.node.sonar.branchName>${project.tile.sonar.branchName}</maven-tile.node.sonar.branchName>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${project.tiles.exec-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>npm install (validate)</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>validate</phase>
            <configuration>
              <executable>npm</executable>
              <arguments>
                <argument>install</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>npm run test (test)</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>test</phase>
            <configuration>
              <executable>npm</executable>
              <arguments>
                <argument>run</argument>
                <argument>test</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>npm run build (package)</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <executable>npm</executable>
              <arguments>
                <argument>run</argument>
                <argument>build</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>eslint</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>npm run eslint (validate)</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>validate</phase>
                <configuration>
                  <executable>npm</executable>
                  <arguments>
                    <argument>run</argument>
                    <argument>eslint</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>node-sonar</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>npm run sonar (test)</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>test</phase>
                <configuration>
                  <executable>npm</executable>
                  <arguments>
                    <argument>run</argument>
                    <argument>sonar</argument>
                  </arguments>
                  <environmentVariables>
                    <SONAR_HOST>${maven-tile.node.sonar.host}</SONAR_HOST>
                    <SONAR_TOKEN>${maven-tile.node.sonar.token}</SONAR_TOKEN>
                    <SONAR_KEY>${maven-tile.node.sonar.projectKey}</SONAR_KEY>
                    <SONAR_NAME>${maven-tile.node.sonar.projectName}</SONAR_NAME>
                    <SONAR_PASS>${maven-tile.node.sonar.password}</SONAR_PASS>
                    <SONAR_ORGANIZATION>${maven-tile.node.sonar.organization}</SONAR_ORGANIZATION>
                    <SONAR_BRANCH>${maven-tile.node.sonar.branchName}</SONAR_BRANCH>
                  </environmentVariables>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>node-report</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>npm run report (test)</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>test</phase>
                <configuration>
                  <executable>npm</executable>
                  <arguments>
                    <argument>run</argument>
                    <argument>report</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>

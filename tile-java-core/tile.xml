<?xml version="1.0" encoding="UTF-8"?>
<project>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <sonar.language>java</sonar.language>
    <java.version>1.8</java.version>

    <project.tile.plugins.maven-source-plugin.version>3.2.0</project.tile.plugins.maven-source-plugin.version>
    <project.tile.plugins.maven-compiler-plugin.version>3.8.1</project.tile.plugins.maven-compiler-plugin.version>
    <project.tile.plugins.compile.source>${java.version}</project.tile.plugins.compile.source>
    <project.tile.plugins.compile.target>${java.version}</project.tile.plugins.compile.target>
    <project.tile.plugins.compile.plugin.debug>false</project.tile.plugins.compile.plugin.debug>
    <project.tile.plugins.compile.plugin.optimize>true</project.tile.plugins.compile.plugin.optimize>

    <project.tile.plugins.maven-surefire-plugin.version>3.0.0-M4</project.tile.plugins.maven-surefire-plugin.version>
    <project.tile.plugins.maven-surefire-plugin.use-system-classloader>true</project.tile.plugins.maven-surefire-plugin.use-system-classloader>
    <project.tile.plugins.modernizer-maven-plugin.version>1.8.0</project.tile.plugins.modernizer-maven-plugin.version>

    <project.tile.plugins.maven-javadoc-plugin.version>3.1.1</project.tile.plugins.maven-javadoc-plugin.version>
    <project.tile.plugins.jacoco-maven-plugin.version>0.8.5</project.tile.plugins.jacoco-maven-plugin.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>${project.tile.plugins.maven-source-plugin.version}</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>package</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${project.tile.plugins.maven-compiler-plugin.version}</version>
        <configuration>
          <source>${project.tile.plugins.compile.source}</source>
          <target>${project.tile.plugins.compile.target}</target>
          <optimize>${project.tile.plugins.compile.plugin.optimize}</optimize>
          <debug>${project.tile.plugins.compile.plugin.debug}</debug>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${project.tile.plugins.maven-surefire-plugin.version}</version>
        <configuration>
          <useSystemClassLoader>${project.tile.plugins.maven-surefire-plugin.use-system-classloader}</useSystemClassLoader>
          <useManifestOnlyJar>false</useManifestOnlyJar>
          <failIfNoTests>false</failIfNoTests>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*Spec.java</include>
          </includes>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.gaul</groupId>
        <artifactId>modernizer-maven-plugin</artifactId>
        <version>${project.tile.plugins.modernizer-maven-plugin.version}</version>
        <configuration>
          <failOnViolations>false</failOnViolations>
          <javaVersion>${java.version}</javaVersion>
        </configuration>
        <executions>
          <execution>
            <id>modernizer</id>
            <phase>verify</phase>
            <goals>
              <goal>modernizer</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <profiles>
    <profile>
      <id>release</id>
      <activation>
        <property>
          <name>performRelease</name>
          <value>false</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>${project.tile.plugins.jacoco-maven-plugin.version}</version>
            <executions>
              <execution>
                <id>prepare-agent</id>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
              </execution>
              <execution>
                <id>report</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>report</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>${project.tile.plugins.maven-javadoc-plugin.version}</version>
            <executions>
              <execution>
                <id>attach-java-docs</id>
                <phase>package</phase>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
